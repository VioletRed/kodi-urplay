			<!-- Previous item -->
			<control type="image">
				<left>525</left>
				<top>-4</top>
				<width>40</width>
				<height>4</height>
				<texture colordiffuse="ColorSelected">common/white.png</texture>
				<visible>Container(50).HasPrevious</visible>
			</control>
			<!-- List -->
			<control type="fixedlist" id="50">
				<left>485</left>
				<width>1155</width>
				<height>780</height>
				<onup>50</onup>
				<ondown>50</ondown>
				<onright>60</onright>
				<onleft condition="!Skin.HasSetting(KioskMode)">3000</onleft>
				<pagecontrol>60</pagecontrol>
				<focusposition>4</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<itemlayout height="80" width="1155">
					<!-- Watched status -->
					<control type="image">
						<top>30</top>
						<width>20</width>
						<height>20</height>
						<texture>$VAR[StatusOverlay]</texture>
					</control>
					<control type="label">
						<left>40</left>
						<top>0</top>
						<width>1115</width>
						<height>80</height>
						<font>Med</font>
